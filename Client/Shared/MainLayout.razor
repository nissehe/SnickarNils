@inherits LayoutComponentBase
@implements IDisposable
@inject NavigationManager NavigationManager

<main class="main-layout">
    @if (!string.IsNullOrEmpty(backButtonClass))
    {
        <button class="back-button" type="button" @onclick="NavigateBack" aria-label="Back to overview">
            <i class="@backButtonClass"  style="font-size:2rem" aria-hidden="true"></i>
        </button>
    }

    <div class="banner">
        <h1>Snickar~Nils</h1>
    </div>

    <div class="main-content">
        @Body
    </div>
</main>

@code{
    private string backButtonClass;

    protected override void OnInitialized()
    {
        CheckLocation();

        NavigationManager.LocationChanged += LocationChanged;
        base.OnInitialized();
    }

    private void LocationChanged(object sender, LocationChangedEventArgs e)
    {
        CheckLocation();
    }

    private void CheckLocation()
    {
        backButtonClass = NavigationManager.Uri.Contains("overview")
            ? string.Empty
            : "far fa-arrow-alt-circle-left fa-2x";

        StateHasChanged();
    }

    void IDisposable.Dispose()
    {
        NavigationManager.LocationChanged -= LocationChanged;
    }

    private void NavigateBack()
    {
        NavigationManager.NavigateTo("/");
    }
}
