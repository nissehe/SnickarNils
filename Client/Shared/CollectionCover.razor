@inject NavigationManager navigation

@if (ImageCollectionSummary != null)
{
    <div class="tile" @onclick="() => ViewCollection()">
        <div class="image">
            <img src="@ImageCollectionSummary.CoverImageUri" />
        </div>

        <div class="description">
            @ImageCollectionSummary.Description
        </div>
    </div>
}
else
{
    <i class="fas fa-circle-notch fa-spin fa-lg" style="margin:1rem 0.85rem;"></i>
}

@code {

    [Parameter]
    public ImageCollectionSummary ImageCollectionSummary { get; set; }

    private void ViewCollection()
    {
        navigation.NavigateTo($"/collection/{ImageCollectionSummary.ContainerName}");
    }
}
