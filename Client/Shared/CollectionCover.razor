@inject NavigationManager navigation

@if (ImageCollectionSummary != null)
{
    <button class="tile" type="button" @onclick="ViewCollection" aria-label="@ImageCollectionSummary.Description">
        <div class="image">
            <img src="@ImageCollectionSummary.CoverImageUri" alt="@ImageCollectionSummary.Description" />
            <div class="watermark" aria-hidden="true">
                <i class="far fa-images" aria-hidden="true"></i>
                <span class="count">@ImageCollectionSummary.ImageCount</span>
            </div>
        </div>

        <div class="description">
            @ImageCollectionSummary.Description
        </div>
    </button>
}
else
{
    <i class="fas fa-circle-notch fa-spin fa-lg" style="margin:1rem 0.85rem;"></i>
}

@code {

    [Parameter]
    public ImageCollectionSummary ImageCollectionSummary { get; set; }

    private void ViewCollection()
    {
        navigation.NavigateTo($"/collection/{ImageCollectionSummary.ContainerName}");
    }
}
